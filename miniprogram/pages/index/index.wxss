image {
    vertical-align: top;
}

#wrapper {
    display: block;
    width: 100%;
    height: 100vh;
    background-color: #ffffff;
}

#header {
    display: flex;
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    width: 100%;
    height: 180rpx;
    background-color: #ffffff;
    box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.08);
    z-index: 999;
}

#currentCity {
    position: absolute;
    left: 25rpx;
    top: 20rpx;
    height: 80rpx;
}

#location {
    margin: 24rpx 0rpx 0rpx 0rpx;
    width: 24rpx;
    height: 32rpx;
}

#city {
    margin: 0rpx 0rpx 0rpx 10rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 80rpx;
}

#fakeSearch {
    position: absolute;
    left: 140rpx;
    top: 20rpx;
    right: 25rpx;
    padding: 0px 72rpx 0px 76rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
}

#magnifier {
    position: absolute;
    left: 25rpx;
    top: 24rpx;
    width: 32rpx;
    height: 32rpx;
}

#fakeSearch text {
    color: #808080;
    font-size: 32rpx;
    line-height: 80rpx;
}

#broadcast {
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 60rpx;
    background-color: rgba(250,189,38,0.1);
    overflow: hidden;
}

#broadcast text {
    display: block;
    color: #8e6b15;
    font-size: 26rpx;
    line-height: 60rpx;
    white-space: nowrap;
    animation: broadcast 18000ms linear infinite;
}

#side {
    position: fixed;
    left: 0rpx;
    top: 180rpx;
    bottom: 44rpx;
    width: 150rpx;
    background-color: #f7f7f7;
}

.cat {
    position: relative;
    width: 100%;
    margin-bottom: 1px;
    height: 180rpx;
    text-align: center;
    box-sizing: border-box;
    line-height: 100rpx;
}

.cat-bg {
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 7rpx;
    transition: all 150ms;
}

.cat.active .cat-bg {
    height: 100%;
}

.cat text {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 138rpx;
    color: #999999;
    font-size: 30rpx;
    line-height: 1em;
    transform: translate(-50%,-50%);
    transition: all 150ms;
}

.cat.active text {
    color: #ffffff;
    font-weight: bold;
}

.cat.en text {
    font-size: 24rpx;
    line-height: 1.2em;
}

.cat image {
    width: 20px;
    height: 20px;
    border-radius: 5px;
}

#qrCode {
    position: absolute;
    left: 35rpx;
    bottom: 35rpx;
    padding: 10rpx;
    width: 60rpx;
    height: 60rpx;
    background-color: #ffffff;
    box-shadow: 0px 1px 3px 1px rgba(0,0,0,0.1);
}

#tips {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 44rpx;
    background-color: #f7f7f7;
    color: #999999;
    font-size: 22rpx;
    line-height: 2em;
    text-align: center;
    box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.05);
    box-sizing: border-box;
}

.list-wrapper {
    position: absolute;
    /* left: 150rpx;  */
    top: 180rpx;
    right: 0rpx;
    bottom: 44rpx;
}

.list {
    display: block;
    height: 100%;
    background-color: #ffffff;
}

.section {
    padding-top: 12px;
}

.cat-intro-wrapper {
    margin: 0rpx 12px;
    padding-top: 15px;
    padding-bottom: 8px;
    border-radius: 20rpx;
}

.cat-intro-wrapper-0 {
    background-color: rgba(102,64,53,0.1);
}

.cat-intro-wrapper-1 {
    background-color: rgba(44,43,39,0.1);
}

.cat-intro-wrapper-2 {
    background-color: rgba(16,72,131,0.1);
}

.cat-intro-wrapper-3 {
    background-color: rgba(229,49,34,0.1);
}

.section-icon {
    display: block;
    margin: 0px auto;
    width: 250rpx;
    height: 250rpx;
    border-radius: 10px;
}

.cat-intro {
    margin-top: 8px;
    padding: 0px 15px;
}

.cat-description {
    font-size: 14px;
    line-height: 1.8em;
    text-indent: 2em;
}

.cat-description .b {
    font-weight: bold;
}

.throw-tips-title {
    display: block;
    font-size: 14px;
    font-weight: bold;
    line-height: 1.8em;
}

.throw-tip {
    position: relative;
    display: block;
    padding-left: 1em;
    font-size: 14px;
    line-height: 1.8em;
}

.throw-tip::before {
    content: "";
    position: absolute;
    left: 4px;
    top: 1em;
    width: 4px;
    height: 4px;
    border-radius: 2px;
    background-color: #000000;
    transform: translateY(-50%);
}

.item {
    padding-left: 1em;
    line-height: 3em;
    font-size: 15px;
}

.item:nth-child(odd) {
    background-color: #fafafa;
}

#qrDownloadOverlay {
    position: fixed;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 2002;
}

#hideQr {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

#hideQr::before,#hideQr::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 40rpx;
    height: 4rpx;
    border-radius: 2rpx;
    background-color: #cccccc;
}

#hideQr::before {
    transform: translate(-50%,-50%) rotate(45deg);
}

#hideQr::after {
    transform: translate(-50%,-50%) rotate(-45deg);
}

#overlay {
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    background-color: rgba(0,0,0,0.3);
    z-index: 1800;
}

#chooseCity {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 600rpx;
    height: 800rpx;
    border-radius: 20rpx;
    background-color: #ffffff;
    transform: translate(-50%,-50%);
    z-index: 1801;
}

#chooseCityCurrent {
    height: 100rpx;
}

#chooseCityCurrent image {
    margin-left: 30rpx;
    margin-top: 35rpx;
    width: 23rpx;
    height: 30rpx;
}

#chooseCityCurrent text {
    margin-left: 15rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 100rpx;
}

#cities {
    border-top: 1px solid #eeeeee;
    border-bottom: 1px solid #eeeeee;
    height: 670rpx;
    box-sizing: border-box;
}

.setting-item {
    position: relative;
    padding-left: 1em;
    border-bottom: 1px solid #f0f0f0;
    background-color: #ffffff;
    font-size: 30rpx;
    line-height: 3em;
}

.setting-item:last-child {
    border-bottom: none;
}

.checked::after {
    content: "";
    position: absolute;
    right: 35rpx;
    top: 32rpx;
    width: 30rpx;
    height: 15rpx;
    border-left: 2px solid #fabd26;
    border-bottom: 2px solid #fabd26;
    transform: rotate(-45deg);
}

@-webkit-keyframes pop {
    0% {
        transform: translate(-50%,-50%) scale(0);
    }

    80% {
        transform: translate(-50%,-50%) scale(1.05);
    }

    100% {
        transform: translate(-50%,-50%) scale(1);
    }
}

@keyframes pop {
    0% {
        transform: translate(-50%,-50%) scale(0);
    }

    80% {
        transform: translate(-50%,-50%) scale(1.05);
    }

    100% {
        transform: translate(-50%,-50%) scale(1);
    }
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@-webkit-keyframes shake {
    4%,8%,12% {
        transform: rotate(-10deg);
    }

    2%,6%,10% {
        transform: rotate(10deg);
    }

    0%,14%,100% {
        transform: rotate(0deg);
    }
}

@keyframes shake {
    4%,8%,12% {
        transform: rotate(-10deg);
    }

    2%,6%,10% {
        transform: rotate(10deg);
    }

    0%,14%,100% {
        transform: rotate(0deg);
    }
}

@-webkit-keyframes broadcast {
    0% {
        margin-left: 100%;
    }

    100% {
        margin-left: -60em;
    }
}

@keyframes broadcast {
    0% {
        margin-left: 100%;
    }

    100% {
        margin-left: -60em;
    }
}

.share,.cs {
    position: fixed;
    right: 20rpx;
    bottom: 100rpx;
    width: 150rpx;
    height: 60rpx;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    background-color: #ffffff;
    box-shadow: 0px 1px 3px 1px rgba(0,0,0,0.1);
    z-index: 1501;
}
.cs {
    bottom: 20rpx;
}
.share.index {
    top: 220rpx;
}
.cs.index {
    top: 290rpx;
}
.share::after,.cs::after {
    border: none;
}
.share image,.cs image {
    position: absolute;
    left: 25rpx;
    top: 15rpx;
    width: 30rpx;
    height: 30rpx;
}

.share text,.cs text {
    position: absolute;
    left: 65rpx;
    top: 0rpx;
    line-height: 60rpx;
    color: #333333;
    font-size: 28rpx;
}